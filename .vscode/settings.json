{
	"restoreTerminals.terminals": [
		{
			"splitTerminals": [
				{
					"name": "server",
					"commands": ["pnpm i && pnpm dev"]
				},
				{
					"name": "svelte-check",
					"commands": ["pnpm check:watch"]
				},
				{
					"name": "vitest ui",
					"commands": ["pnpm test"]
				}
			]
		},
		{
			"splitTerminals": [
				{
					"name": "build",
					"commands": ["pnpm build"]
				}
			]
		}
	],

	"css.lint.vendorPrefix": "ignore",
	"scss.lint.vendorPrefix": "ignore",

	"files.exclude": {
		"**/.git": true
	},

	"files.associations": {
		"[*.md, *.svx, *.mdsvex]": "mdx", //* https://github.com/pngwn/MDsveX/issues/121#issuecomment-675106929
		"*.xml": "html", //* Prettier
		"*.svg": "html" //* Prettier
	},

	"editor.formatOnSave": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	//* Workbench
	"workbench.iconTheme": "material-icon-theme",
	"workbench.editor.labelFormat": "short",

	//* More comment tags.
	"better-comments.tags": [
		{
			"tag": "·",
			"color": "#374fa6",
			"bold": true
		},
		{
			"tag": "⌟",
			"color": "#002255",
			"bold": true
		},
		{
			"tag": "!",
			"color": "#886f50"
		},
		{
			"tag": "?",
			"color": "#3498DB"
		},
		{
			"tag": "//",
			"color": "#474747",
			"strikethrough": true,
			"backgroundColor": "transparent"
		},
		{
			"tag": "todo",
			"color": "#FF8C00"
		},
		{
			"tag": "*",
			"color": "#98C379"
		}
	],

	//* Svelte
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.css.globals": "src/styles/theme.scss, src/styles/app.scss",
	"svelte.plugin.svelte.compilerWarnings": {
		"element_invalid_self_closing_tag": "ignore",
		// "a11y_aria_attributes": "ignore",
		// "a11y_incorrect_aria_attribute_type": "ignore",
		// "a11y_unknown_aria_attribute": "ignore",
		// "a11y_hidden": "ignore",
		// "a11y_misplaced_role": "ignore",
		// "a11y_unknown_role": "ignore",
		// "a11y_no_abstract_role": "ignore",
		// "a11y_no_redundant_roles": "ignore",
		// "a11y_role_has_required_aria_props": "ignore",
		// "a11y_accesskey": "ignore",
		// "a11y_autofocus": "ignore",
		// "a11y_misplaced_scope": "ignore",
		// "a11y_positive_tabindex": "ignore",
		// "a11y_invalid_attribute": "ignore",
		// "a11y_missing_attribute": "ignore",
		// "a11y_img_redundant_alt": "ignore",
		// "a11y_label_has_associated_control": "ignore",
		// "a11y_media_has_caption": "ignore",
		// "a11y_distracting_elements": "ignore",
		// "a11y_structure": "ignore",
		// "a11y_mouse_events_have_key_events": "ignore",
		// "a11y_missing_content": "ignore",
		// "a11y_click_events_have_key_events": "ignore",
		"a11y_no_static_element_interactions": "ignore"
		// "a11y_no_noninteractive_element_interactions": "ignore"
	}
}
